<h1>All Books</h1>

<%= link_to 'Add New Book', new_book_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td>
          <%= link_to 'Show', book %>
          <%= link_to 'Edit', edit_book_path(book) %>
          <!-- Update this link to point to the delete confirmation page -->
          <%= link_to 'Delete', delete_book_path(book) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

